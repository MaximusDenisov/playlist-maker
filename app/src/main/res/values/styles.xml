<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonOnMainPage" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:theme">@style/Base.Theme.PlaylistMaker</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ysd_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">@dimen/standart_letter_spacing_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/standart_text_main_page_size</item>
        <item name="cornerRadius">@dimen/standart_radius_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/minimal_indent_size</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>
    <style name="ButtonOnSettingPage">
        <item name="android:theme">@style/Base.Theme.PlaylistMaker</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ysd_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">@dimen/standart_indent_main_page_size</item>
    </style>
</resources>