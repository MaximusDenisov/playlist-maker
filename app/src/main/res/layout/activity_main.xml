<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3772E7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/minimal_indent_size"
            android:layout_marginStart="@dimen/minimal_indent_size">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/app_name"
                android:fontFamily="@font/ysd_light"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/standart_text_main_page_size"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/standart_indent_size"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:contentDescription="Кнопка поиска"
        android:fontFamily="@font/ysd_medium"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:letterSpacing="@dimen/standart_letter_spacing_size"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/standart_text_main_page_size"
        app:cornerRadius="@dimen/standart_radius_size"
        app:icon="@drawable/search_ic_vector"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/minimal_indent_size"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/media_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/standart_indent_size"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:contentDescription="Кнопка медиатека"
        android:fontFamily="@font/ysd_medium"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:letterSpacing="@dimen/standart_letter_spacing_size"
        android:text="@string/media"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/standart_text_main_page_size"
        app:cornerRadius="@dimen/standart_radius_size"
        app:icon="@drawable/media_ic_vector"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/minimal_indent_size"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/standart_indent_size"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:contentDescription="Кнопка настроек"
        android:fontFamily="@font/ysd_medium"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:letterSpacing="@dimen/standart_letter_spacing_size"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/standart_text_main_page_size"
        app:cornerRadius="@dimen/standart_radius_size"
        app:icon="@drawable/settings_ic_vector"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/minimal_indent_size"
        app:iconTint="@color/black" />

</LinearLayout>