<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standart_start_indent_screen_page_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginVertical="@dimen/minimal_indent_size"
            android:layout_marginStart="@dimen/minimal_indent_size"
            android:layout_weight="9">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/name_button_to_main_page"
                app:icon="@drawable/arrow_ic_vector"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/minimal_indent_size"
                app:iconTint="@color/black">

            </Button>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/standart_indent_size"
                android:layout_weight="3"
                android:contentDescription="@string/settings"
                android:fontFamily="@font/ysd_medium"
                android:letterSpacing="-0.05"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textSize="@dimen/standart_text_setting_page_size" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:visibility="invisible">

            </Button>


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/minimal_indent_size"
            android:layout_marginEnd="@dimen/minimal_indent_size"
            android:layout_weight="3"
            android:visibility="invisible">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:contentDescription="@string/button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/standart_start_indent_screen_page_size"
            android:contentDescription="Темная тема"
            android:fontFamily="@font/ysd_regular"
            android:gravity="start"
            android:text="@string/dark_theme_setting"
            android:textColor="@color/black"
            android:textSize="@dimen/standart_text_setting_page_size" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/standart_indent_size" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:contentDescription="@string/button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:contentDescription="Поделиться приложения"
            android:fontFamily="@font/ysd_regular"
            android:gravity="start"
            android:text="@string/share_app_setting"
            android:textColor="@color/black"
            android:textSize="@dimen/standart_text_setting_page_size" />

        <ImageView
            android:layout_width="@dimen/square_side_size"
            android:layout_height="@dimen/square_side_size"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/standart_indent_size"
            android:src="@drawable/share_app_ic_vector" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:contentDescription="@string/button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/standart_start_indent_screen_page_size"
            android:contentDescription="Написать в поддержку"
            android:fontFamily="@font/ysd_regular"
            android:gravity="start"
            android:text="@string/write_to_support_setting"
            android:textColor="@color/black"
            android:textSize="@dimen/standart_text_setting_page_size" />

        <ImageView
            android:layout_width="@dimen/square_side_size"
            android:layout_height="@dimen/square_side_size"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/standart_indent_size"
            android:src="@drawable/write_to_support_ic_vector" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:contentDescription="@string/button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/standart_start_indent_screen_page_size"
            android:contentDescription="Пользовательское соглашение"
            android:fontFamily="@font/ysd_regular"
            android:gravity="start"
            android:text="@string/user_agreement_setting"
            android:textColor="@color/black"
            android:textSize="@dimen/standart_text_setting_page_size" />

        <ImageView
            android:layout_width="@dimen/square_side_size"
            android:layout_height="@dimen/square_side_size"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/standart_indent_size"
            android:src="@drawable/user_agreement_ic_vector" />
    </FrameLayout>

</LinearLayout>